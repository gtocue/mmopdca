{
    // ────────── 既存設定 ──────────
    "yaml.schemas": {
        "./core/schemas/dsl/plan_v1.json": "docs/samples/plan_sample.yaml",
        "./core/schemas/dsl/do_v1.json": "docs/samples/do_sample.yaml"
    },
    "json.schemas": [
        {
            "fileMatch": [
                "*plan*.json",
                "plan_sample.json"
            ],
            "url": "./core/schemas/dsl/plan_v1.json"
        },
        {
            "fileMatch": [
                "*do*.json",
                "do_sample.json"
            ],
            "url": "./core/schemas/dsl/do_v1.json"
        }
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never"
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell 7": {
            "path": [
                "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
            ],
            "args": []
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell 7",
    // ────────── 追加設定 ──────────
    // 1) ファイル保存時のエンコーディングを常に UTF-8 (BOM なし) に
    "files.encoding": "utf8",
    // 2) 改行コードは LF のみに固定
    "files.eol": "\n",
    // 3) ファイル種別ごとにも上書き指定
    "[yaml]": {
        "files.encoding": "utf8",
        "files.eol": "\n"
    },
    "[yml]": {
        "files.encoding": "utf8",
        "files.eol": "\n"
    },
    "[json]": {
        "files.encoding": "utf8",
        "files.eol": "\n"
    },
    "[env]": {
        "files.encoding": "utf8",
        "files.eol": "\n"
    },
    "[sh]": {
        "files.encoding": "utf8",
        "files.eol": "\n"
    },
    // 4) Dockerfile 追加時の Compose 自動生成を無効化
    // ────────── 追加設定 ──────────
    "python.analysis.typeCheckingMode": "off",
    "docker.generateComposeFileOnAdd": false,
}