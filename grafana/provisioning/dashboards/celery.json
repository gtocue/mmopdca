{
    "uid": "celery-health",
    "title": "Celery Queue Health",
    "timezone": "browser",
    "panels": [
        {
            "type": "stat",
            "title": "Queue Length",
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "sum(celery_queue_length)"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "none",
                    "color": {
                        "mode": "palette-classic"
                    }
                }
            }
        },
        {
            "type": "stat",
            "title": "Tasks Succeeded / min",
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "rate(celery_tasks_succeeded_total[1m])"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ops"
                }
            }
        },
        {
            "type": "stat",
            "title": "Tasks Failed / min",
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "rate(celery_tasks_failed_total[1m])"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ops",
                    "color": {
                        "mode": "thresholds"
                    }
                }
            }
        }
    ],
    "time": {
        "from": "now-30m",
        "to": "now"
    },
    "schemaVersion": 38,
    "version": 1
}